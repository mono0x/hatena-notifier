{
  "manifest_version": 2,
  "name": "Hatena Notifier",
  "version": "0.0.1",
  "description": "Notify events on Hatena",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": [
      "lib/jquery-1.7.1.min.js",
      "lib/background.js",
      "lib/analytics.js"
    ],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "storage",
    "http://www.hatena.ne.jp/notify/notices.iframe"
  ]
}
